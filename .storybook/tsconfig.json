{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@design-system/*": ["../src/design-system/*"],
      "@components/*": ["../src/components/*"]
    }
  },
  "include": [
    "../src/**/*",
    "../src/**/*.stories.*",
    "../src/**/*.story.*",
    "./*.ts",
    "./*.tsx"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../build"
  ]
} 