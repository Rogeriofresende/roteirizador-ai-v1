    "education",
    "utilities"
  ],
  
  "shortcuts": [
    {
      "name": "Gerar Nova Ideia",
      "short_name": "Gerar",
      "description": "Gerar uma nova ideia rapidamente",
      "url": "/?action=generate",
      "icons": [
        {
          "src": "/icons/shortcut-generate.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Histórico de Ideias",
      "short_name": "Histórico",
      "description": "Ver histórico de ideias salvas",
      "url": "/?tab=history",
      "icons": [
        {
          "src": "/icons/shortcut-history.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Templates",
      "short_name": "Templates",
      "description": "Acessar templates de ideias",
      "url": "/?tab=templates",
      "icons": [
        {
          "src": "/icons/shortcut-templates.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Performance",
      "short_name": "Performance",
      "description": "Monitorar performance da aplicação",
      "url": "/?tab=performance",
      "icons": [
        {
          "src": "/icons/shortcut-performance.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://roteirar-ia.vercel.app/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+roteirar",
      "url": "/?idea=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "text/plain": [".txt"],
        "text/markdown": [".md"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["application/json", "text/csv", "text/plain", "text/markdown"]
        }
      ]
    }
  },
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "navigate-new"]
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "handle_links": "preferred",
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  
  "gcm_sender_id": "103953800507",
  
  "offline_enabled": true,
  
  "features": [
    "background-sync",
    "push-notifications",
    "offline-capability",
    "install-prompt",
    "share-target",
    "web-share",
    "file-handling",
    "shortcuts"
  ]
} 